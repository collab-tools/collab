{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y"
    ],

    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "import/no-extraneous-dependencies": [
        "error", {"devDependencies": ["**/*.test.js", "**/*.spec.js"]}
      ],
      "no-mixed-operators": [
        "error",
        {
          "groups": [
          ["+", "-", "*", "/", "%", "**"],
          ["&", "|", "^", "~", "<<", ">>", ">>>"],
          ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
          ["&&", "||"],
          ["in", "instanceof"]
          ],
          "allowSamePrecedence": true
        }
      ],
    },
    "env": {
      "mocha": true
    }
}
